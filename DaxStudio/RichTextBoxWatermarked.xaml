<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:DaxStudioWPF"
	x:Class="DaxStudioWPF.RichTextBoxWatermarked"
	x:Name="Root"
	d:DesignWidth="428.775" d:DesignHeight="103.5">

	<Grid x:Name="LayoutRoot">
		<RichTextBox>
			<FlowDocument>
				<Paragraph><Run Text="RichTextBox"/></Paragraph>
			</FlowDocument>
		</RichTextBox>
		 <TextBlock Name="WaterMarkLabel"
           IsHitTestVisible="False"
           Foreground="{Binding ElementName=Root,Path=Foreground}"
           FontWeight="Bold"
           Opacity=".1"
           FontStyle="Italic"
           Text="Output"
           VerticalAlignment="Bottom"
           TextWrapping="Wrap"
           TextAlignment="Right" Height="59.96" Margin="142.948,0,0,-1"
		   FontSize="48"
           />
	</Grid>
</UserControl>